<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F69AFF"
    android:backgroundTint="#F69AFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AboutMeActivity">
    <!--  Add this line  -->
    <!--  Fill the linear layout with some components -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/initial"
            android:layout_width="133dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:layout_marginVertical="24dp"
            android:background="@drawable/ic_launcher_foreground"
            android:backgroundTint="#FF45B4"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#C51111"
                android:fontFamily="@font/amaranth"
                android:text="USERNAME"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/aboutme_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black"
                android:textColorHint="#000000"
                android:textSize="16sp"
                tools:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/amaranth"
                android:text="EMAIL"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/aboutme_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black"
                android:textColorHint="#000000"
                android:textSize="16sp"
                tools:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/amaranth"
                android:text="BALANCE"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/aboutme_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:numeric="decimal"
                android:phoneNumber="false"
                android:textColor="@color/black"
                android:textColorHint="#000000"
                android:textSize="16sp"
                tools:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/topup_amount"
                android:layout_width="200sp"
                android:layout_height="60sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30sp"
                android:fontFamily="monospace"
                android:hint="Top Up Amount"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <Button
                android:id="@+id/topup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF45B4"
                android:fontFamily="@font/andada"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:text="TOP UP"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="30sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/renter_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Not registered" />

        <TextView
            android:id="@+id/renter_status2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Registered"
            tools:visibility="gone" />

        <Button
            android:id="@+id/renter_button"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF45B4"
            android:fontFamily="@font/andada"
            android:foregroundTint="#FF45B4"
            android:shadowColor="#FF45B4"
            android:text="Register Company"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#9A3B3B"
            android:textColorHint="#A33F3F"
            android:textColorLink="#C15959"
            app:iconTint="#FF45B4"
            app:rippleColor="#FF45B4"
            app:strokeColor="#FF45B4"
            tools:visibility="visible" />

        <Button
            android:id="@+id/renter_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Bus"
            tools:visibility="gone" />
    </LinearLayout>
</LinearLayout>