<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#F69AFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <!--  Add this line  -->
    <!--  Fill the linear layout with some components -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:textColor="#173460"
        android:textSize="34sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/alegreya_sc_bold"
        android:gravity="center"
        android:paddingBottom="30sp"
        android:text="JBUS"
        android:textColor="#FA24A3"
        android:textSize="52sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:background="#00F4F6FB"
        android:fadingEdge="horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/bree_serif"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginBottom="30sp"
            android:fontFamily="@font/bree_serif"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF45B4"
            android:fontFamily="@font/andada"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="LOGIN"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sc_bold"
            android:gravity="center"
            android:text="or"
            android:textColor="#173460"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/register_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF45B4"
            android:fontFamily="@font/andada"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="REGISTER NOW"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="10dp" />
    </LinearLayout>
</LinearLayout>