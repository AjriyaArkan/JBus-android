<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.Button.IconButton.Filled"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F69AFF"
    android:backgroundTint="#F69AFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterRenterActivity">
    <!--  Add this line  -->
    <!--  Fill the linear layout with some components -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:background="#00F4F6FB"
        android:fadingEdge="horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:text="Add Bus"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/bus"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:fontFamily="monospace"
            android:hint="Bus name"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/capacity"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:fontFamily="monospace"
            android:hint="Capacity"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:fontFamily="monospace"
            android:hint="Price"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="3dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:text="Bus Type"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_directions_bus_24"
                app:tint="#FF45B4" />

            <Spinner
                android:id="@+id/bus_type_dropdown"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="3dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:text="Departure"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_home_24"
                app:tint="#FF45B4" />

            <Spinner
                android:id="@+id/departure_dropdown"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="3dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:text="Arrival"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_forward_24"
                app:tint="#FF45B4" />

            <Spinner
                android:id="@+id/arrival_dropdown"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="3dp">
            <!--  CheckBox for AC  -->
            <!--  CheckBox for WiFi  -->

            <CheckBox
                android:id="@+id/ac_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/bebas_neue"
                android:text="AC" />

            <CheckBox
                android:id="@+id/wifi_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/bebas_neue"
                android:text="WiFi" />
            <!--  CheckBox for WiFi  -->
            <CheckBox
                android:id="@+id/toilet_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebas_neue"
                android:text="Toilet" />
            <!--  CheckBox for WiFi  -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="3dp">

            <CheckBox
                android:id="@+id/lcd_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/bebas_neue"
                android:text="LCD" />
            <!--  CheckBox for WiFi  -->
            <CheckBox
                android:id="@+id/coolbox_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bebas_neue"
                android:text="Coolbox" />
            <!--  CheckBox for WiFi  -->
            <CheckBox
                android:id="@+id/lunch_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/bebas_neue"
                android:text="Lunch" />
            <!--  CheckBox for WiFi  -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="3dp">

            <CheckBox
                android:id="@+id/baggage_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/bebas_neue"
                android:text="Baggage" />
            <!--  CheckBox for WiFi  -->
            <CheckBox
                android:id="@+id/electric_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/bebas_neue"
                android:text="Electric" />
            <!--  Add more CheckBox elements for other items  -->
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/add_button"
        style="Button.IconButton.Filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF45B4"
        android:fontFamily="@font/andada"
        android:text="Add"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="16sp"
        app:iconTint="#FF45B4" />
    <!--  Add a new LinearLayout for Checkboxes  -->
    <!--  Add a new LinearLayout for Checkboxes  -->
    <!--  Add a new LinearLayout for Checkboxes  -->
</LinearLayout>